<Window x:Class="LauncherDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherDemo"
        mc:Ignorable="d"
        Title="Launcher" Height="700" Width="1000"
        Background="#282C34"
        FontFamily="Inter">
    <!-- Using Inter font family -->
    <Grid>
        <!-- Définition des lignes pour les trois sections : Top, Mid, Bottom -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Section (adapte sa hauteur au contenu) -->
            <RowDefinition Height="*"/>
            <!-- Mid Section (prend l'espace restant) -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Section (adapte sa hauteur au contenu) -->
        </Grid.RowDefinitions>

        <!-- ################################################################## -->
        <!-- Top Section -->
        <!-- ################################################################## -->
        <Border Grid.Row="0" Background="#3E4452" Padding="15" CornerRadius="10" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Launcher" VerticalAlignment="Center" Foreground="White" FontSize="24" FontWeight="Bold"/>

                <Button Name="ButtonAccount" Grid.Column="1" Margin="10,0,0,0"
                        Background="Transparent" BorderBrush="Transparent" Cursor="Hand"
                        Padding="0">
                    <StackPanel Orientation="Horizontal">
                        <!-- Image de profil placeholder. Remplacez Source par votre image. -->
                        <Ellipse Width="40" Height="40" StrokeThickness="2" Stroke="White">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="https://placehold.co/100x100/A0A0A0/FFFFFF?text=P" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text=" ▼" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="10"/>
                    </StackPanel>

                    <!-- Menu déroulant au clic sur le bouton -->
                    <Button.ContextMenu>
                        <ContextMenu>
                            <!-- Si l'utilisateur n'est PAS connecté -->
                            <MenuItem Header="Connexion" FontWeight="SemiBold"/>
                            <MenuItem Header="Inscription"/>
                            <Separator/>
                            <!-- Si l'utilisateur EST connecté -->
                            <MenuItem Header="Afficher Profil" FontWeight="SemiBold"/>
                            <MenuItem Header="Déconnexion" Foreground="Red"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
        </Border>

        <!-- ################################################################## -->
        <!-- Mid Section -->
        <!-- ################################################################## -->
        <Border Grid.Row="1" Background="#21252B" Padding="20" CornerRadius="10" Margin="10,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <!-- Pour le logo et le bouton -->
                    <ColumnDefinition Width="*"/>
                    <!-- Pour les informations de connexion -->
                </Grid.ColumnDefinitions>

                <!-- Gauche : Logo principal et bouton vert -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Logo principal (placeholder). Remplacez Source par votre logo. -->
                    <Grid Width="200" Height="200" Margin="0,0,0,20">
                        <TextBlock Name="PercentageUpdatedText" Text="test"
                                   Foreground="White"
                                   FontSize="24"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Grid>


                    <!-- Bouton vert -->
                    <Grid Width="200" Height="50">
                        <Button x:Name="LaunchButton"
                                Content="Lancer le Jeu"
                                Background="#4CAF50" Foreground="White"
                                FontSize="18" FontWeight="Bold"
                                BorderBrush="#388E3C" BorderThickness="2"
                                Cursor="Hand"
                                Padding="10,5" Click="ButtonLaunch_OnClick">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#66BB6A"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#388E3C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <ProgressBar x:Name="ProgressBarLaunch"
                                     Visibility="Collapsed"
                                     Minimum="0" Maximum="100" Value="0"
                                     Height="50" Width="200"
                                     Foreground="#4CAF50" Background="#DDDDDD"/>
                    </Grid>
                </StackPanel>

                <!-- Droite : Informations de connexion -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,30,0">
                    <TextBlock Text="Statistiques du Lanceur" Foreground="#66BB6A" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    <TextBlock Text="Serveur disponible: " Foreground="LightGray" FontSize="16" Margin="0,0,0,5"/>
                    <TextBlock Name="AvailableStatus" Text="•" Foreground="LightGray" FontSize="16" Margin="0,0,0,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ################################################################## -->
        <!-- Bottom Section -->
        <!-- ################################################################## -->
        <Border Grid.Row="2" Background="#3E4452" Padding="15" CornerRadius="10" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Carte d'actualité 1 -->
                <Border Width="200" Height="150" Background="#21252B" CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Nouvelle Majeure !" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="Découvrez les dernières mises à jour du jeu et les événements à venir." Foreground="LightGray" TextWrapping="Wrap" FontSize="12"/>
                        <Image Source="https://placehold.co/180x80/282C34/FFFFFF?text=Actualité+1" Stretch="Uniform" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Carte d'actualité 2 -->
                <Border Width="200" Height="150" Background="#21252B" CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Maintenance Prévue" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="Le jeu sera inaccessible pour une courte période. Plus de détails ici." Foreground="LightGray" TextWrapping="Wrap" FontSize="12"/>
                        <Image Source="https://placehold.co/180x80/282C34/FFFFFF?text=Actualité+2" Stretch="Uniform" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Carte d'actualité 3 -->
                <Border Width="200" Height="150" Background="#21252B" CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Événement Spécial" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="Rejoignez notre événement limité pour des récompenses exclusives !" Foreground="LightGray" TextWrapping="Wrap" FontSize="12"/>
                        <Image Source="https://placehold.co/180x80/282C34/FFFFFF?text=Actualité+3" Stretch="Uniform" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Carte d'actualité 4 (optionnelle) -->
                <Border Width="200" Height="150" Background="#21252B" CornerRadius="8" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Nouveaux Contenus" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="Préparez-vous pour l'arrivée de nouveaux héros et de nouvelles cartes." Foreground="LightGray" TextWrapping="Wrap" FontSize="12"/>
                        <Image Source="https://placehold.co/180x80/282C34/FFFFFF?text=Actualité+4" Stretch="Uniform" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
